<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slambook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/slambook"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.slambook.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.slambook.Registration"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.Home"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.Profile"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.MySlams"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.SlamRequest"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.SendRequest"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.FillRequest"
            android:label="@string/app_name" >
            </activity>
            <activity
            android:name="com.slambook.DisplaySlamData"
            android:label="@string/app_name" >
            </activity>
    </application>

</manifest>
